generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = "mysql://root:root@localhost:3306/smoke_app"
}

model User {
  id            String       @id @default(cuid())
  email         String       @unique
  password      String
  role          Role
  supermarketId String?
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  supermarket   Supermarket? @relation(fields: [supermarketId], references: [id])

  @@map("users")
}

model Supermarket {
  id        String   @id @default(cuid())
  name      String
  phone     String?  // Contact phone number
  status    Status   @default(PENDING)
  users     User[]
  orders    Order[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("supermarkets")
}

model SupermarketRequest {
  id              String        @id @default(cuid())
  supermarketName String
  contactEmail    String
  contactPhone    String?
  address         String?
  businessLicense String?
  status          RequestStatus @default(PENDING)
  notes           String?
  requestedAt     DateTime      @default(now())
  reviewedAt      DateTime?
  reviewedBy      String?

  @@map("supermarket_requests")
}

model Product {
  id            String      @id @default(cuid())
  distributorId String
  name          String
  price         Float
  stock         Int
  description   String?
  image         String?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  orderItems    OrderItem[]

  @@map("products")
}

model Order {
  id            String      @id @default(cuid())
  supermarketId String
  distributorId String
  status        OrderStatus @default(PENDING)
  total         Float       @default(0)
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  items         OrderItem[]
  supermarket   Supermarket @relation(fields: [supermarketId], references: [id])

  @@map("orders")
}

model OrderItem {
  id                 String   @id @default(cuid())
  orderId            String
  productId          String?
  quantity           Int
  price              Float
  productName        String
  productDescription String?
  productImage       String?
  distributorId      String
  product            Product? @relation(fields: [productId], references: [id])
  order              Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@map("order_items")
}

enum Role {
  SUPER_ADMIN
  DISTRIBUTOR
  SUPERMARKET
}

enum Status {
  PENDING
  ACTIVE
  INACTIVE
}

enum RequestStatus {
  PENDING
  APPROVED
  REJECTED
}

enum OrderStatus {
  PENDING
  SHIPPED
  COMPLETED
  CANCELLED
}
